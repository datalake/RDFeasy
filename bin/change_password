#!/bin/sh

#
# set_dba_password old_password new_password
#

export OLDPW=$1
export NEWPW=$2

isql <<EOF
   USER_CHANGE_PASSWORD('dba','$OLDPW','$NEWPW');
   USER_CHANGE_PASSWORD('dav','$OLDPW','$NEWPW');
EOF

sudo mkdir -p /etc/virtuoso/
echo $NEWPW | sudo bash -c 'cat > /etc/virtuoso/dba_passwprd'

